    <script>
        // Enhanced Custom cursor with multiple tree followers
        document.addEventListener('DOMContentLoaded', function() {
            const cursor = document.querySelector('.cursor');
            const cursorFollower = document.querySelector('.cursor-follower');
            const treeFollower = document.querySelector('.tree-follower');
            const treeFollower2 = document.querySelector('.tree-follower-2');
            const treeFollower3 = document.querySelector('.tree-follower-3');
            
            let mouseX = 0, mouseY = 0;
            let followerX = 0, followerY = 0;
            let tree1X = 0, tree1Y = 0;
            let tree2X = 0, tree2Y = 0;
            let tree3X = 0, tree3Y = 0;
            
            // Smooth follower animation
            function animate() {
                // Move cursor follower with easing
                followerX += (mouseX - followerX) * 0.1;
                followerY += (mouseY - followerY) * 0.1;
                
                // Move trees with different easing values for natural movement
                tree1X += (mouseX - 15 - tree1X) * 0.05;
                tree1Y += (mouseY + 10 - tree1Y) * 0.05;
                
                tree2X += (mouseX + 20 - tree2X) * 0.07;
                tree2Y += (mouseY - 15 - tree2Y) * 0.07;
                
                tree3X += (mouseX - 25 - tree3X) * 0.09;
                tree3Y += (mouseY - 20 - tree3Y) * 0.09;
                
                // Apply positions
                cursorFollower.style.left = followerX + 'px';
                cursorFollower.style.top = followerY + 'px';
                
                treeFollower.style.left = tree1X + 'px';
                treeFollower.style.top = tree1Y + 'px';
                
                treeFollower2.style.left = tree2X + 'px';
                treeFollower2.style.top = tree2Y + 'px';
                
                treeFollower3.style.left = tree3X + 'px';
                treeFollower3.style.top = tree3Y + 'px';
                
                requestAnimationFrame(animate);
            }
            
            animate();
            
            document.addEventListener('mousemove', (e) => {
                mouseX = e.clientX;
                mouseY = e.clientY;
                
                cursor.style.left = e.clientX + 'px';
                cursor.style.top = e.clientY + 'px';
            });
            
            // Enhanced interactive cursor effects
            document.querySelectorAll('a, button, .volunteer-card').forEach(element => {
                element.addEventListener('mouseenter', () => {
                    cursor.style.transform = 'scale(1.8)';
                    cursor.style.backgroundColor = 'var(--forest-green)';
                    cursorFollower.style.transform = 'scale(1.4)';
                    cursorFollower.style.borderColor = 'var(--forest-green)';
                    
                    // Make trees more visible on hover
                    treeFollower.style.opacity = '0.8';
                    treeFollower2.style.opacity = '0.7';
                    treeFollower3.style.opacity = '0.6';
                });
                
                element.addEventListener('mouseleave', () => {
                    cursor.style.transform = 'scale(1)';
                    cursor.style.backgroundColor = 'var(--forest-green)';
                    cursorFollower.style.transform = 'scale(1)';
                    cursorFollower.style.borderColor = 'var(--pastel-green)';
                    
                    // Return trees to normal opacity
                    treeFollower.style.opacity = '0.6';
                    treeFollower2.style.opacity = '0.5';
                    treeFollower3.style.opacity = '0.4';
                });
            });
            
            // Navbar scroll effect
            window.addEventListener('scroll', () => {
                const navbar = document.querySelector('.navbar');
                if (window.scrollY > 50) {
                    navbar.classList.add('scrolled');
                } else {
                    navbar.classList.remove('scrolled');
                }
                
                // Scroll animation for impact items
                const impactItems = document.querySelectorAll('.impact-item');
                impactItems.forEach(item => {
                    const itemTop = item.getBoundingClientRect().top;
                    const windowHeight = window.innerHeight;
                    
                    if (itemTop < windowHeight * 0.85) {
                        item.classList.add('visible');
                    }
                });
            });
            
            // Smooth scrolling for anchor links
            document.querySelectorAll('a[href^="#"]').forEach(anchor => {
                anchor.addEventListener('click', function(e) {
                    e.preventDefault();
                    
                    const targetId = this.getAttribute('href');
                    if (targetId === '#') return;
                    
                    const targetElement = document.querySelector(targetId);
                    if (targetElement) {
                        window.scrollTo({
                            top: targetElement.offsetTop - 80,
                            behavior: 'smooth'
                        });
                    }
                });
            });
            
            // Report button functionality
            document.querySelectorAll('.btn-report, .nav-report').forEach(button => {
                button.addEventListener('click', function(e) {
                    e.preventDefault();
                    alert('Thank you for your concern. Our team will review your report promptly.');
                });
            });
            
            // Initialize impact items to be hidden initially
            document.querySelectorAll('.impact-item').forEach(item => {
                item.classList.remove('visible');
            });
        });
    </script>
</body>
